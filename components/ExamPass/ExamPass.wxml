<view class='game_result'>
  <view class='mask'>
    <view class='result_light'>
      <!--称号以及星星的显示区域-->
      <view class='bg_result_light'></view>
      <view class='bg_title'>
        <view class='text_light'></view>
        <view class='result_title'>
          <text class='title_one'>{{titleList[starNum-1][0]}}</text>
          <text class='title_two'>{{titleList[starNum-1][1]}}</text>
          <text class='title_three'>{{titleList[starNum-1][2]}}</text>
          <text class='title_four'>{{titleList[starNum-1][3]}}</text>
        </view>
        <view class='result_star'>
          <view class='result_star_one'>
            <image src='../../img/result/dark_star.png'></image>
          </view>
          <view class='result_star_two'>
            <image src='../../img/result/dark_star.png'></image>
          </view>
          <view class='result_star_three'>
            <image src='../../img/result/dark_star.png'></image>
          </view>
        </view>
        <!--星星飞入覆盖-->
        <view class='result_star'>
          <view class='result_star_one'>
            <image wx:if="{{starNum > 0}}" class='light_star_one' src='../../img/star.png'></image>
          </view>
          <view class='result_star_two'>
            <image wx:if="{{starNum > 1}}" class='light_star_two' src='../../img/star.png'></image>
          </view>
          <view class='result_star_three'>
            <image wx:if="{{starNum > 2}}" class='light_star_three' src='../../img/star.png'></image>
          </view>
        </view>
      </view>

      <!--文字的显示区域-->
      <view class='content_area'>
        <view class='wordNum'>
          正确单词<text style='color: #4BD26B;'>{{rightNum}}</text>个 
          错误<text style='color: #FF5A5A;'>{{errorNum}}</text>个
        </view>
        <view class='greed_title'>恭喜你<text>{{greedTitle}}</text>通过</view>
        <view class='greed_line'>准予升级</view>
      </view>

      <!--按钮的区域-->
      <view class='btn_area'>
        <view class='btnItem_next' bindtap='goNextGame'>
          继续学习
        </view>
        <view class='btnItem_share'>
          晒一晒
          <button open-type='share' class='btn_share'>
          </button>
        </view>
      </view>

      <!--奖励的区域-->
      <view class='reward_area'>
        奖学金：<image src='../../img/result/coin.png'></image> + 100
      </view>

    </view>
  </view>
</view>