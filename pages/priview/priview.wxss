page{
  width: 100%;
  height: 100%;
  background-color: #0A102D;
}
.canvas {
  width: 640rpx;
  height: 1136rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.btn_area {
  width: 100%;
  height: 120rpx;
  background: #FFFA9F;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  color: #AC763C;
  font-size: 50rpx;
  letter-spacing: 6rpx;
  font-family: 'Zaozi';
  text-align: center;
  line-height: 120rpx;
}
.btn_area button {
  width: 100%;
  height: 120rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
  margin: auto;
  opacity: 0;
}