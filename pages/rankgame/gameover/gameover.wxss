Page{
  width: 100%;
  height: 100%;
  background: #392D4E;
}

.resultBox {
  width: 100%;
  height: 100%;
}

.content {
  width: 80%;
  height: 800rpx;
  background: #403C6E;
  border-radius: 20rpx;
  position: relative;
  top: 4%;
  left: 0;
  right: 0;
  margin: 0 auto;
  padding: 20rpx;
}
/*顶部头像的样式*/
.header {
  height: 22%;
  border-bottom: 1px solid #48437C;
  position: relative;
  left: 0;
  right: 0;
  top: 0;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.winlogo{
  flex: 1;
  color: #F47954;
  text-align: center;
}
.winlogo text {
  font-size: 60rpx;
}
.winlogo .coin image {
  width: 30rpx;
  height: 30rpx;
}
.winlogo .coin {
 font-size: 30rpx;
}
.loselogo {
  color: #ACACAC;
  letter-spacing: 10rpx;
  font-size: 60rpx;
}
/*pk结果样式*/
.pkResult {
  height: 50%;
  width: 600rpx;
  position: relative;
  top: 2%;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.flex-row {
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.flex-col {
  flex: 1;
  color: #FFF;
  font-size: 30rpx;
  text-align: center;
  line-height: 100%;
}
.userimg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
/*卡片底部按钮样式*/
.footer {
  height: 16%;
  position: relative;
  top: 10%;
  left: 0;
  right: 0;
  margin: 0 auto;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.footerItem {
  width: 234rpx;
  height: 80rpx;
  color: #FFF;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  background-size: cover;
  background-image: url('http://peqmyh7ue.bkt.clouddn.com/btn.png');
}

/*卡片底部文字样式*/
.tips {
  color: #FFF;
  font-size: 24rpx;
  text-align: center;
  position: relative;
  top: 6%;
  left: 0;
  right: 0;
  margin: 0 auto;
}
/*分享按钮的样式*/
.btn_share {
  width: 480rpx;
  height: 120rpx;
  color: #FFF;
  font-size: 38rpx;
  text-align: center;
  line-height: 120rpx;
  border-radius: 60rpx;
  position: relative;
  top: 10%;
  left: 0;
  right: 0;
  margin: 30rpx auto;
  background-image: linear-gradient(to left, #657AEF 0%, #8D79EF 100%);
}

/* 弹出菜单样式 */
#shareFriends {
  border: none;
  border-radius: 0;
  height: 45px;
  font-size: 18px;
  padding: 10px 0;
  line-height: 25px;
  background: #FFFFFF;
}