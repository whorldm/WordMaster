.showword .enAndch{
  width: 60%;
  height: 80rpx;
  color: #F4C05F;
  font-size: 38rpx;
  line-height: 80rpx;
  position: relative;
  top: 20%;
  left: 0;
  right: 0;
  margin: 0 auto;
  text-align: center;
}
.shakeText {
  animation: shakeText 0.8s ease-in normal forwards;
}
.showword .enAndch text {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
}

/*单词操作区域样式*/
.keyWord{
  width: 80%;
  position: relative;
  top: 20rpx;
  left: 0;
  right: 0;
  margin: 20rpx auto;
  border-radius: 10rpx;
  background: #403C6E;
  padding: 20rpx;
}
.flex-row{
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.flex-column{
  height: 120rpx;
  margin: 10rpx;
  color: #260063;
  font-size: 28rpx;
  line-height: 120rpx;
  text-align: center;
  border-radius: 10rpx;
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: stretch;
  align-items: center;
  background-color: #fff;
}
.flex-column:hover {
  transform:rotateY(180deg);
}
.isClick {  /*点中的效果*/
  background: #43CFDC;
}
.sucessState {  /*答对的效果*/
  opacity: 0; 
  /* background: #403C6E; */
}
.errorState {  /*答错的效果*/
  position: relative;
  background: #FF7248;
  animation: tremble 0.8s 0s ease both;
}
.notice { /*点击提示后的效果*/
  animation: changeColor 0.5s ease infinite forwards; 
}

/*提示信息*/
.help {
  height: 138rpx;
  width: 138rpx;
  position: relative;
  top: 4%;
  left: 0;
  right: 0;
  margin: 0 auto;
  line-height: 138rpx;
  color: #A491CE;
  font-size: 24rpx;
  text-align: center;
  background-image: url('http://peqmyh7ue.bkt.clouddn.com/imagebtn_circle.png');
  background-size: cover;
}