.showword .enAndch{
  flex: 1;
  color: #F4C05F;
  font-size: 38rpx;
  text-align: center;
}
.showword .left {
  animation: bounceInLeft 1s ease-in;
}
.showword .right {
  animation: bounceInRight 1s ease-in;
}
.shakeText {
  animation: shakeText 0.8s ease-in normal forwards;
}
.showword .showState {
  width: 500rpx;
  height: 300rpx;
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  margin: auto;
  animation: Stamp 1s ease-in forwards;
}

/* 实现盖章效果 */
@keyframes Stamp {
  0% {opacity: 0;transform: translateZ(3000px) scale(1.5);}
  25% {opacity: 0.5;transform: translateZ(20px) scale(1.3);}
  50% {opacity: 0.8;transform: translateZ(10px) scale(1.2);}
  75% {opacity: 1;transform: translateZ(5px) scale(1.1);}
  100% {opacity: 1;transform: translateZ(0) scale(1);}
}


