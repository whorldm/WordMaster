/* components/ShowCombox/ShowCombox.wxss */
.combox_area {
  position: absolute;
  left: 0;
  right: 0;
  top: 20%;
  margin: auto;
  text-align:center;
  color: #FFCA2F;
  font-family: 'Zaozi';
  font-size: 40rpx; 
  font-weight: bold;
  z-index: 300;
  /* text-shadow:0 0 16rpx #FFCA2F, 0 0 16rpx #FF5700; */
  animation: flyTop 0.7s 0s linear forwards;
}
@keyframes flyTop {
  0%{transform: translate3d(0, 30px, 0) scale(1);opacity: 1;}
  20%{transform: translate3d(0, 0, 0) scale(1.1);opacity: 1;}
  100%{transform: translate3d(0, -60px, 0) scale(0);opacity: 0;}
}

