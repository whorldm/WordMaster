/**显示成功的动效**/
.Dialog .item{
  text-align:center;
  margin:0;
  color: #fff;
  font-family:Arial;
  font-size:80rpx; 
  font-weight:bold;
  text-shadow:0 0 16rpx #03a9f4, 0 0 16rpx #03a9f4;
}
.text-left {
  animation: left 0.3s ease-in forwards;
}

.text-right {
  animation: right 0.3s ease-in forwards;
}

.text-fly-y {
  animation: hor-animation 1s 0.8s forwards;
}

.text-fly-x {
  animation: vertical-animation 1s 0.8s forwards;
}

@keyframes left{
  from, 60%, 75%, 90%, to {animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);}
  0% {opacity: 0;transform: translate3d(-3000px, 0, 0);}
  60% {opacity: 1;transform: translate3d(60px, 0, 0);}
  75% {transform: translate3d(-10px, 0, 0);}
  90% {transform: translate3d(5px, 0, 0);}
  100% {opacity: 1;transform: none;}
}
@keyframes right{
  from, 60%, 75%, 90%, to {animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);}
  0% {opacity: 0;transform: translate3d(3000px, 0, 0);}
  60% {opacity: 1;transform: translate3d(-60px, 0, 0);}
  75% {transform: translate3d(10px, 0, 0);}
  90% {transform: translate3d(-5px, 0, 0);}
  100% {opacity: 1;transform: none;}
}
@keyframes hor-animation { /*匀速运动*/
  0% { transform: translateX(0px); }
  100% { transform: translateX(440px); }
}
@keyframes vertical-animation {  /*加速运动*/
  from,to {animation-timing-function: cubic-bezier(.11,.19,.82,1.4);}
  0% { transform: translateY(0px) scale(1);}
  100% { transform: translateY(-440px) scale(0);}
}