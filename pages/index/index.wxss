/**index.wxss**/
Page,
.Box {
  height: 100%;
  width: 100%;
  background-size: cover;
  background-image: url('http://peqmyh7ue.bkt.clouddn.com/home/bg.png');
}
.btn_start {
  width: 400rpx;
  height: 130rpx;
  line-height: 130rpx;
  color: #AC763C;
  font-size: 50rpx;
  font-family: 'Zaozi';
  letter-spacing: 6rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  margin: 0 auto;
  background-size: cover;
  background-image: url('http://peqmyh7ue.bkt.clouddn.com/home/btn_start.png');
}
.btn_start button {
  width: 400rpx;
  height: 130rpx;
  opacity: 0;
  z-index: 2;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

/**底部的入口链接**/
.foot_nav {
  width: 100%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 12%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.foot_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.rank_logo,
.vs_logo,
.pk_logo{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: #9AB7CC;
  display: flex;
  align-items: center;
  justify-content: center;
}
.foot_item image {
  width: 110rpx;
  height: 110rpx;
  display: block;
  position: relative;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}
/*未开启时的样式*/
.unopen {
  width: 180rpx;
  height: 180rpx;
  position: relative;
}
.mask {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  z-index: 4;
  background:rgba(0, 0, 0,0.2);
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.logo_name {
  color: #4E8D8F;
  font-size: 36rpx;
  margin: 10rpx auto;
}