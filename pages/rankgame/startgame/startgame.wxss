  padding: 20rpx;
}
/*单词操作区域样式   正面*/
.keyWord{
  width: 640rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}
.front{
  z-index: 1;
  animation: bounceInRight 1s ease forwards;
}
.back{
  opacity: 0;
}
.fronted{
  opacity: 0;
}
.backed{
  z-index: 1;
  opacity: 1;
  animation:  showResult 1s ease forwards;
}

