Page{
  width: 100%;
  height: 100%;
  background: #392D4E;
}

.resultBox {
  width: 100%;
  height: 100%;
}

.content {
  width: 86%;
  height: 850rpx;
  background: #403C6E;
  border-radius: 20rpx;
  position: relative;
  top: 4%;
  left: 0;
  right: 0;
  margin: 0 auto;
  padding: 20rpx;
}
/*顶部头像的样式*/
.header {
  height: 26%;
  border-bottom: 1px solid #48437C;
  position: relative;
  left: 0;
  right: 0;
  top: 0;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user {
  flex: 1;
  text-align: center;
}
.user image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user text{
  display: block;
  margin: 0 auto;
  color: #FFF;
  font-size: 32rpx;
}
.winlogo{
  flex: 1;
  color: #F47954;
  text-align: center;
}
.winlogo text {
  font-size: 60rpx;
}
.winlogo .coin image {
  width: 30rpx;
  height: 30rpx;
}
.winlogo .coin {
 font-size: 30rpx;
}
/*卡片单词列表样式*/
.word_item {
  height: 60rpx;
  margin: 10rpx auto;
  display: flex;
}
.word_text {
  flex: 1;
  color: #FFF;
  font-size: 30rpx;
  text-align: left;
  padding-left: 20rpx;
}
.word_text text{
  margin: 0 10rpx;
}
.word_right{
  flex: 0.5;
  text-align: center;
  color: greenyellow;
}
.word_error {
  flex: 0.5;
  color: red;
  text-align: center;
}
/*卡片底部按钮样式*/
.footer {
  height: 16%;
  border-top: 1px solid #48437C;
  position: relative;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0 auto;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.footerItem{
  width: 260rpx;
  height: 90rpx;
  background: linear-gradient(to left, #657AEF 0%, #8D79EF 100%);
  border-radius: 50rpx;
}
.footer .circle {
  width: 248rpx;
  height: 78rpx;
  color: #FFF;
  font-size: 30rpx;
  line-height: 78rpx;
  text-align: center;
  background-color: #403C6E;
  margin: 6rpx auto 0;
  border-radius: 44rpx;
}

/*卡片底部文字样式*/
.tips {
  color: #FFF;
  font-size: 24rpx;
  text-align: center;
  position: relative;
  top: 6%;
  left: 0;
  right: 0;
  margin: 0 auto;
}
/*分享按钮的样式*/
.btn_share {
  width: 480rpx;
  height: 120rpx;
  color: #FFF;
  font-size: 38rpx;
  text-align: center;
  line-height: 120rpx;
  border-radius: 60rpx;
  position: relative;
  top: 7%;
  left: 0;
  right: 0;
  margin: 30rpx auto;
  background-image: linear-gradient(to left, #657AEF 0%, #8D79EF 100%);
}

/* 弹出菜单样式 */
#result {
  border: none;
  border-radius: 0;
  height: 45px;
  font-size: 18px;
  padding: 10px 0;
  line-height: 25px;
  background: #FFFFFF;
}