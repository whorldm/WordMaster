/* 4-6名样式 */
.middle_area {
  width: 86%;
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.middle_item {
  height: 100rpx;
  margin: 20rpx auto;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.middle_item .index {
  flex: 1;
  font-size: 46rpx;
  color: #FFC600;
  text-align: right;
  padding-right: 10rpx;
  font-family: 'Zaozi';
}
.middle_item .userInfo {
  flex: 3;
  font-size: 36rpx;
  color:#FFF;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.userInfo text{
  width: 74%;
  float: left;
  text-align: left;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.userInfo image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: inline-block;
  margin: auto 10rpx;
  border: 2px solid #F7F9FA;
}
.middle_item .score {
  flex: 2;
  color: #FFF;
  text-align: center;
  font-size: 36rpx;
}

/* 我的排名信息 */
.my_area {
  width: 86%;
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.my_area .title {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.title_line {
  flex: 0.6;
  box-sizing: border-box;
  line-height: 0;
  background-color: rgb(232, 232, 232);
  width: 100%;
  height: 1px;
}
.title_text {
  flex: 1;
  color: #FCFFAd;
  font-size: 40rpx;
  line-height: 80rpx;
  text-align: center;
  font-family: 'Zaozi';
}
.title_text text{
  color: #FF9800;
}

.line {
  color: #FCFFAd;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10rpx auto;
}
.line view {
  flex: 1;
  text-align: center;
}

/* 奖励 */
.my_coin {
  color: #FCFFAd;
  width: 90%;
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  margin: 20rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.my_coin image {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  margin: 0 10rpx;
}
.my_coin text {
  display: inline-block;
  margin-left: 20rpx;
}

