Page{
  width: 100%;
  height: 100%;
}
.Box {
  width: 100%;
  height: 100%;
  background: #392D4E;
  perspective: 500; 
  font-family: 'Bitstream';
}
.vs_area {
  width: 90%;
  height: 180rpx;
  position: relative;
  top: 20rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}
/*对决栏的样式*/
.vs_info {
  width: 100%;
  height: 180rpx;
  color: #fff;
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.vs_user {
  width: 25%;
  height: 100%;
  color: #9278ED;
  text-align: center;
}
.vs_user image {
  width: 106rpx;
  height: 106rpx;
  border-radius: 50%;
}
.vs_left{
  float: left;
}
.vs_right{
  float: right;
}
/* 展示加分的动效 */
.addPoint {
  opacity: 0;
  animation: addPoint 1s ease-in-out forwards;
}

/*对决条的样式*/
.vs_center {
  width: 62%;
  color: #fff;
  position: absolute;
  top: 40rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  text-align: center;
}
.vs_center text {
  display: block;
  margin: 40rpx auto 0;
}
.line {
  display: flex;
}
.line .left{
  height: 40rpx;
  float: left;
  background-image: linear-gradient(to top, #677aef 0%, #8b79ef 100%);
}
.line .right {
  height: 40rpx;
  float: right;
  background-color: #43CFDC;
}
.lastFive {
  color: red;
}

