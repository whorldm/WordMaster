<view class='mask'>
  <view class='text-fly-y' wx:if="{{random === 0}}">
    <view class='text-fly-x'>
      <view class='item text-left'>{{showWord[0]}}</view>
      <view class='item text-right'>{{showWord[1]}}</view>
    </view>
  </view>

  <view class='text-fly-y' wx:else>
    <view class='text-fly-x'>
      <view class='item jumpCenter'>{{showWord[0]}} {{showWord[1]}}</view>
    </view>
  </view>
</view>

