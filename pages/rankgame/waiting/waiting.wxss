Page{
  width: 100%;
  height: 100%;
  background: #392D4E;
}
/**背景VS字样的闪现动效*/
.bg_vs {
  color: #413C6E;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: 0 auto;
  text-align: center;
  z-index: -1;
  animation: fadeVS 0.5s ease-in normal forwards; 
}
.bg_vs text {
  display: block;
  margin: 0 auto;
  position: relative;
  top: -80rpx;
  left: 0rpx;
  right: 0;
  font-size: 250rpx;
  transform: scale(1.1,1.5);
  font-weight: bolder;
}
/*中间匹配的样式*/
.match_area{
  width:100%;  
  position: relative;
  top: 25%;
  margin: 0 auto;
  display: flex;  
  justify-content: center;
}
.match_left,
.match_right {
  flex: 1;
  text-align: center;
}
/*用户头像样式*/
.user_logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}
.float_in {
  animation: bounceInRight 0.5s ease normal forwards;
}

/*用户信息样式*/
.match_left text,
.match_right text{
  display: block;
  margin-top: 40rpx;
  color: #FFF;
  font-size: 32rpx;
}
.grade {
  margin-top: 20rpx;
  line-height: 20rpx;
  font-size: 26rpx;
  color: #85BFFD;
}
/*中间匹配文字样式*/
.match_loading {
  flex: 0.6;
  color: #85BFFD;
  font-size: 28rpx;
}
.match_loading text {
  display: block;
  position: absolute;
  text-align: center;
  top: 30%;
  left: 0;
  right: 0;
  margin: 0 auto;
}

/*右侧动态加载样式*/
.loading{
  width: 160rpx;
  height: 160rpx;
  position:relative;
  border-radius: 50%;
  margin: 0 auto;
  background-color: #392D4E;
}

.loading::after {                  
  position: absolute;              
  content: '';
  background: linear-gradient(#9079EF, #647AEF);   
  bottom: 0; 
  right: 0;
  left: 0;
  top: 0;                             
  z-index: -1;
  transform: scale(1.1);              
  border-radius: 50%;
}              

.small_pian{
  width: 160rpx;
  height:160rpx;
  position: absolute;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  animation: run 1.5s linear infinite;
}
.small_pian .small_p{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  border-radius: 50%;
}
.small_pian .p1{
  background-color: #43CFDC;
  left: 20rpx;
}

/*取消样式*/
.cancel {
  height: 138rpx;
  width: 138rpx;
  position: relative;
  left: 0;
  right: 0;
  bottom: 10%;
  margin: 0 auto;
  background-image: url('http://peqmyh7ue.bkt.clouddn.com/imagebtn_circle.png');
  background-size: cover;
  line-height: 138rpx;
  color: #A491CE;
  font-size: 30rpx;
  text-align: center;
}

@keyframes fadeVS {
  0% {
    opacity:0;
  }
  25% {
    opacity:0.25;
  }
  50% {
    opacity: 0.5; 
    color: #647AEF; 
  }
  75% {
    opacity:0.75;
    color: #9079EF;
  }
  100% {
   opacity: 1;
  }
}