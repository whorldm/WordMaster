.Box {
  overflow-y: scroll;
  background-size: cover;
  background-image: url('http://cdn.tik.com/wordmaster/image/stairgame_bg_game.png');
}
.rank_area {
  width: 90%;
  height: 240rpx;
  position: relative;
  left: 0;
  right: 0;
  margin: 10rpx auto;
}
.rank_area text {
  color: #21343E;
  font-size: 26rpx;
  text-align: center;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.rank_one {
  width: 30%;
  float: left;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.rank_one text {
  position: relative;
  top: -20rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.rank_two,
.rank_three{
  width: 25%;
  float: left;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.rank_four {
  width: 20%;
  float: left;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.rank_one_logo {
  width: 143rpx;
  height: 166rpx;
  position: relative;
  left: 0;
  right: 0;
  bottom: 0;
  background-size: cover;
  background-image: url('http://cdn.tik.com/wordmaster/image/sports_rank_one_bg.png');
}
.rank_one_logo image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
