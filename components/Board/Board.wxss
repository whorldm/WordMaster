/* components/Board/Board.wxss */
.test {
  opacity: 0;
}

.fade_left {
  animation: new_left 0.2s 0.6s ease-in forwards;
}
@keyframes new_left{
  0% {opacity: 1;transform: translate3d(0, 0, 0);}
  100% {opacity: 0;transform: translate3d(-3000px, 0, 0);}
}

.fade_right {
  animation: new_right 0.2s 0s ease-in forwards;
}
@keyframes new_right{
  0% {opacity: 0;transform: translate3d(3000px, 0, 0);}
  100% {opacity: 1;transform: translate3d(0, 0, 0);}
}
