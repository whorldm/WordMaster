/* pages/prestudy/prestudy.wxss */
.Box {
  overflow-y: scroll;
  background-size: cover;
  background-image: url('http://cdn.tik.com/wordmaster/image/stairgame_bg_game.png');
}
.header {
  width: 90%;
  position: relative;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.header .title{
  color: #30729A;
  font-size: 40rpx;
  line-height: 100rpx;
  text-align: center;
}
/*等级星星的样式*/
.process_area {
  width: 260rpx;
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.area_star {
  width: 260rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.star_one {
  flex: 1;
  height: 40rpx;
  text-align: right;
}
.star_two {
  flex: 1.2;
  height: 40rpx;
  text-align: right;
}
.star_three {
  flex: 1;
  height: 40rpx;
  text-align: right;
}
.area_star image{
  width: 40rpx;
  height: 40rpx;
}
/*进度条样式*/
.area_line {
  width: 260rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background-color: #307F76;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.area_inline {
  margin: 0 8rpx;
  width: 242rpx;
  height: 20rpx;
  border-radius: 8rpx;
  background-color: #39A698;
}
/*积分的样式*/
.grade {
  width: 340rpx;
  height: 40rpx;
  position: absolute;
  top: 180rpx;
  left: 0;
  right: 0;
  margin: auto;
  display: flex;
  justify-content: center;
}
.grade .score {
  flex: 1.5;
  color: #F7FF2A;
  font-size: 36rpx;
  text-align: right;
  line-height: 40rpx;
}
.grade .point {
  flex: 1;
  color: #FFF;
  padding: 0 8px;
  font-size: 30rpx;
  text-align: left;
  line-height: 40rpx;
}
/*时间已经词量样式*/
.condition_area {
  /* width: 640rpx; */
  width: 96%;
  height: 100rpx;
  position: relative;
  left: 0;
  right: 0;
  top: 0;
  margin: 0rpx auto 26rpx;
  font-size: 30rpx;
  color: #2F756B;
}
.condition {
  float: left;
  width: 180rpx;
  text-align: center;
  font-family: 'Zaozi';
}
.condition .lastTen {
  color: #FF3328;
}
.condition image{
  width: 40rpx;
  height: 48rpx;
  display: block;
  margin: 4rpx auto;
}
.word_num {
  float: right;
  width: 230rpx;
  color:  #2F756B;
  /* font-family: 'Zaozi'; */
  font-size: 30rpx;
  text-align: center;
}
.word_num image {
  width: 56rpx;
  height: 40rpx;
  display: block;
  margin: 8rpx auto;
}

/*公告栏及键盘区域样式*/
.keyboard {
  width: 660rpx;
  height: 610rpx;
  border-radius: 30rpx;
  background: rgba(199, 199, 199, 0.2);
  position: relative;
  left: 0;
  right: 0;
  top: 0;
  margin: 0 auto;
  padding: 20rpx 0;
  line-height: 90rpx;
  font-size: 50rpx;
  color: #FFF;
  text-align: center;
}
/*键盘的区域*/
.word_area {
  width: 100%;
  height: 570rpx;
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
  font-weight: bold;
}
.flex-row{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 18rpx auto;
}
.word_item {
  flex: 1;
  width: 178rpx;
  height: 134rpx;
  margin: auto 20rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 134rpx;
}
.word_common {  /*为选中的效果*/
  color: #815450;
  background-size: cover;
  background-image: url('http://cdn.tik.com/wordmaster/image/word_common.png');
}
.word_click {  /*点击选中的效果*/
  color: #2EAE55;
  background-size: cover;
  background-image: url('http://cdn.tik.com/wordmaster/image/stairgame_word_success.png');
}
.errorState {  /*答错的效果*/
  color: #FF3328;
  background-size: cover;
  background-image: url('http://cdn.tik.com/wordmaster/image/stairgame_word_error.png');
  animation: tremble 0.8s 0s ease both;
}
.sucessState { /*答对的效果*/
  animation: disappear  0.3s ease forwards;
}
.notice { /*点击提示后的效果*/
  background-size: cover;
  animation: newTremble 0.8s ease-in-out; 
}
@keyframes newTremble {
  0%{background-image: url('http://cdn.tik.com/wordmaster/image/stairgame_word_success.png');transform:scale(1);}
  10%,20%{transform:scale(1) rotate(-2deg);}
  30%,50%,70%,90%{transform:scale(1.1) rotate(2deg);}
  40%,60%,80%{transform:scale(1.1) rotate(-2deg);}
  100%{background-image: url('http://cdn.tik.com/wordmaster/image/stairgame_word_common.png');transform:scale(1) rotate(0);}
}

/*提示信息*/
.help {
  height: 80rpx;
  width: 360rpx;
  position: relative;
  top: 4%;
  left: 0;
  right: 0;
  margin: 0 auto;
  line-height: 80rpx;
  color: #815450;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  background-size: cover;
  background-image: url('http://cdn.tik.com/wordmaster/image/help.png');
}
.coin_area {
  width: 400rpx;
  color: #F0EDCC;
  font-size: 34rpx;
  position: relative;
  top: 5%;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.my_coin {
  width: 280rpx;
  float: left;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.my_coin image {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  margin: 0 10rpx;
}
.del_coin {
  width: 100rpx;
  float: right;
  color: #FFF;
  text-align: left;
  animation: delCoin 0.8s 0s linear forwards;
}
@keyframes delCoin{
  0%{transform: translate3d(0, -60px,0);opacity: 0;}
  20%{transform: translate3d(0, -50px,0) scale(1.2);opacity: 1;}
  100%{transform: translate3d(0, 0px,0);opacity: 0;}
}

/**遮罩倒计时**/
.showModal {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}
.countDown {
  width: 214rpx;
  height: 212rpx;
  position: relative;
  top: 40%;
  right: 0;
  left: 0;
  margin: auto;
  z-index: 1000;
}
.countDown image{
  display: block;
  width: 214rpx;
  height: 212rpx;
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto; 
  animation: rotateBig 0.5s 0.2s ease-in forwards,
             rotateSmall 0.5s 0.8s ease-in forwards;
}
@keyframes rotateBig {
  0% {transform: scale(1);}
  100% {transform: scale(1.5);}
}
@keyframes rotateSmall {
  0% {transform:  scale(1.5)}
  100% {transform: scale(0)}
}

