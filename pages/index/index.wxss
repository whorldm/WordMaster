/**index.wxss**/
.menu {
  margin-top: 50px;
  width: 100%;
}
.line {
  width: 85%;
  position: relative;
  top: 0;
  margin: 0 auto;
  text-align: center;
}
.rank {
  height: 200rpx;
  border: 1px solid #000;
  border-radius: 10rpx;
  line-height: 200rpx;
  margin: 20rpx auto;
}
.change {
  height: 300rpx;
  margin: 20rpx auto;
  display: flex;
  flex-flow: row;
  justify-items: center;
}
.left {
  flex: 1;
}
.left text {
  display: block;
  height: 130rpx;
  line-height: 130rpx;
  border: 1px solid #000;
  border-radius: 10rpx;
  margin: 20rpx 20rpx 20rpx 0rpx;
}
.right {
  flex: 1;
  height: 280rpx;
  line-height: 280rpx;
  border-radius: 10rpx;
  border: 1px solid #000;
  margin: 20rpx 0rpx 20rpx 20rpx;
}

.userInfo {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: 0 auto;
  opacity: 0;
}