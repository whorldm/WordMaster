/**显示闯关成功**/
.result {
  padding: 40rpx auto;
  text-align: center;
  font-size: 80rpx;
  font-weight: bolder;
  letter-spacing: 20rpx;
}
.result text {
  opacity: 0;
  display: inline-block;
}
.one {
  animation: drop 250ms 0.1s ease forwards;
}
.two {
  animation: drop 250ms 0.3s ease forwards;
}
.three {
  animation: drop 250ms 0.6s ease forwards;
}
.four {
  animation: drop 250ms 1s ease forwards;
}
@keyframes drop {
  0% {
    opacity: 0;
    transform: translate3d(0, 0, 3000px) scale(3);
  }
  100% {
    opacity: 1;
    transform: translate3d(0, 0, 0) scale(1);
  }
}

/**流光字体样式**/
._borderWrap {
  height: 150rpx;
  position: relative;
  margin: 40rpx auto;
}
._border {
  line-height: 150rpx;
  text-align: center;
  font-size: 80rpx;
  font-weight: bolder;
  -webkit-text-fill-color: transparent;
  background-image: -webkit-linear-gradient(left, #129835, #ece648 25%, #129835 50%, #f9e92b 75%, rgb(40, 150, 38));
  background-size: 200%, 100%;
  -webkit-background-clip: text;
  animation: word 1s linear infinite;
}

@keyframes word {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: -100% 0;
  }
}

/*点击中间实现水波纹*/
.cash {
  width: 325rpx;
  height: 80rpx;
  background: #333;
  border-radius: 6rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  margin: 40rpx auto;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.225);
}
.bubble {
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  overflow: hidden;
}
.bubble:after {
  content: "";
  background: #999;
  position: absolute;
  width: 750rpx;
  height: 750rpx;
  left: calc(50% - 375rpx);
  top: calc(50% - 375rpx);
  opacity: 0;
  margin: auto;
  border-radius: 50%;
  transform: scale(1);
  transition: all 0.6s ease-in-out;
}
.bubble:active:after {
  transform: scale(0);
  opacity: 1;
  transition: 0s;
}

/*随机出现水波纹*/
.btnRandom {
  width: 325rpx;
  height: 80rpx;
  margin: 40rpx auto;
  display: block;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  background-color: #03a9f4;
  border-radius: 6rpx;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.225);
}
.ripple {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 100%;
  height: 20rpx;
  width: 20rpx;
  display: block;
  position: absolute;
  transform: scale(0);
  overflow: hidden;
}
@keyframes ripple {
  100% {
    opacity: 0;
    transform: scale(10);
  }
}

